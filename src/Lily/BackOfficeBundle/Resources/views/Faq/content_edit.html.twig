  <div class="vbox">
    <section class="scrollable">
      <div class="wrapper">
        <div class="clearfix m-b">
          <div class="clear">
            <div class="h5 m-t-xs m-b-xs">
              <span>Contenu<span>
            </div>
            <small class="text-muted">
              Nous vous conseillons de limiter votre réponse à 300 caractères.
            </small>
            <div class="form-group m-t">
              <textarea class="js-editor-input form-control input-sm" name="content">
                <%= content %>
              </textarea>
            </div>
            <footer class="panel-footer bg-light lter clearfix">
              <ul class="nav nav-pills nav-sm toolbar">
                <li><a data-wysihtml5-command="bold" title="CTRL+B"><i class="icon-bold"></i></a></li>
                <li><a data-wysihtml5-command="italic" title="CTRL+I"><i class="icon-italic"></i></a></li>
                <li><a data-wysihtml5-command="underline" title="CTRL+U"><i class="icon-underline"></i></a></li>
                <li><a data-wysihtml5-command="createLink"><i class="icon-link"></i></a></li>
                <form data-wysihtml5-dialog="createLink" class="createLink input-group" style="display: none;">
                  <input data-wysihtml5-dialog-field="href" class="form-control input-sm" value="http://" class="text">
                  <div class="input-group-btn">
                    <a class="btn btn-sm btn-danger" data-wysihtml5-dialog-action="cancel">Annuler</a>
                    <a class="btn btn-sm btn-success" data-wysihtml5-dialog-action="save">Insérer</a>
                  </div>
                </form>
              </ul>
            </footer>
          </div>
        </div>
      </div>
    </section>
    <footer class="dk footer text-center">
      <button class="btn btn-sm btn-success button-update">Sauvegarder</button>
      <button class="btn btn-sm btn-danger button-cancel m-l">Annuler</button>
    </footer>
  </div>
