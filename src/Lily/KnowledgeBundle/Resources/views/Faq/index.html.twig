{% extends "LilyBackOfficeBundle::layout.html.twig" %}

{% block stylesheets %}

{{ parent() }}

{% stylesheets 'css/backoffice/faq.css' 'css/vendor/wysihtml5.css' filter='cssrewrite' output='css/compiled/faq.css' %}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />

{% endstylesheets %}

{% endblock %}

{% block body %}

<section class="hbox stretch">

{% include "LilyBackOfficeBundle::menu.html.twig" with {'user': 'user'}  %}

  {% block content %}
    <!-- .vbox -->
  <section id="faq">
    <section class="hbox stretch">

      <aside class="bg-light lter">
	      <section id="faqs" class="vbox scrollable padder-b">
	        <header id="breadcrumbs" class="bg-light dker header clearfix padder-t b-b">
            <!-- Here go the breadcrumb items
              will render as a <ul class="breadcrumb m-n">
            -->
          </header>

          <section class="bg-light lter">
            <section class="hbox stretch">

              <aside>
                <section class="vbox">
                  <section class="scrollable wrapper" id="faq-list">
                      <!-- Here go the faq items -->

                    <a class="btn btn-sm btn-white new-content faq-content pull-right-lg">
                      <i class="icon-plus pull-left"></i>
                      Ajouter un contenu
                    </a>
                    <a class="btn btn-sm btn-white new-category pull-right-lg m-l-sm">
                      <i class="icon-plus pull-left"></i>
                      Ajouter une catégorie
                    </a>
                  </section>
                </section>
              </aside>
              <!-- /.aside -->
              <aside id="faq-detail" class="aside-faq bg-light lter b-l hide">
				  <!-- Affichage du panneau de modification-->
              </aside>
            </section>
          </section>
      </section>
      </aside>
        <!-- /.aside -->
      </section>
    </section>
  {% endblock %}

</section>

{% block templates %}

	<!-- L'appel des différents scripts de vue -->
	<script type="text/template" id="category">
        {% include 'LilyKnowledgeBundle:Faq:category.html.twig' %}
  </script>
  <script type="text/template" id="content">
      {% include 'LilyKnowledgeBundle:Faq:content.html.twig' %}
  </script>
  <script type="text/template" id="contentEdit">
      {% include 'LilyKnowledgeBundle:Faq:content_edit.html.twig' %}
  </script>
  <script type="text/template" id="breadcrumbView">
      {% include 'LilyKnowledgeBundle:Faq:breadcrumb.html.twig' %}
  </script>

{% endblock %}

{% block bootstrap %}
  {% autoescape false %}

  <script type="text/javascript">
    var config = {};
    config.root = '{{ path('lily_faq') }}';
  </script>

  {% endautoescape %}
{% endblock %}

<script
  src="{{ asset('js/bower_components/requirejs/require.js')}}"
  data-main="{{ asset('js/backoffice/faq/main.js')}}">
</script>

{% endblock %}
