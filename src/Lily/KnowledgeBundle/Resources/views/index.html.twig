
{% extends "LilyBackOfficeBundle::layout.html.twig" %}

{% block stylesheets %}

  {{ parent() }}

  {% stylesheets 'css/backoffice/knowledge.css'
     filter='cssrewrite'
     output='css/compiled/questions.css' %}
  <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
  {% endstylesheets %}

{% endblock %}

{% block body %}

<section>
  <section class="hbox stretch">

  {% include "LilyBackOfficeBundle::menu.html.twig" %}

	{% block content %}
    <!-- .aside -->
    <aside class="js-app-navigator bg-light">
      <section class="vbox">
        <header class="nav-bar">
          <ul class="nav nav-pills nav-stacked no-radius">
            <li class="questions-nav">
              <a href="#questions">
                <span class="badge pull-right">15</span> 
                Questions
              </a>
            </li>
            <li class="files-nav">
              <a href="#files">
                <span class="badge pull-right">15</span> 
                Fichiers
              </a>
            </li>
            <li class="links-nav">
              <a href="#links">
                <span class="badge pull-right">15</span> 
                Liens
              </a>
            </li>
            <li class="categories-divider">
              <span>Categories</span>
              <button class="btn pull-right">Modifier</button>
            </li>
          </ul>
        </header>
        <section class="js-categories-list scrollable">
          <ul class="nav nav-pills nav-stacked no-radius">
            <!--
              Here goes questions' categories
            -->
          </ul>
        </section>
        <footer class="footer b-t">
          <button class="btn">Tout afficher</button>
          <button class="btn pull-right">Tout masquer</button>
        </footer>
      </section>
    </aside>
    <!-- /.aside -->
    
    <!-- .aside -->
    <aside class="bg-light lter">
      <section class="vbox scrollable padder-b">
        <section class="js-skeleton-container hbox stretch">
          <!--  
            Here goes our skeletons
          -->
        </section>
      </section>
    </aside>


    <!-- /.aside -->
	{% endblock %}


	{% block templates %}
		<!-- L'appel des diffÃ©rents scripts de vue -->
		<script type="text/template" id="questionsSkeletonTpl">
      {% include 'LilyKnowledgeBundle:Questions:skeleton.html.twig' %}
    </script>
  {% endblock %}

	{% block bootstrap %}
    {% autoescape false %}
      <script type="text/javascript">
        var config = {};
        config.root = '{{ app.request.getBaseURL() }}/lily/api';
        {% if app.environment == 'dev' %}
        config.wsserver = 'ws://develop.saio.fr';
        {% else %}
        config.wsserver = 'ws://ws.saio.fr';
        {% endif %}
	    </script>
    {% endautoescape %}
	{% endblock %}

  </section>
</section>

<script
  src="{{ asset('js/bower_components/requirejs/require.js')}}"
  data-main="{{ asset('js/backoffice/knowledge/main.js')}}">
</script>

{% endblock %}
