  <div class="vbox">
    <section class="scrollable">
      <div class="wrapper">
        <div class="clearfix m-b">
          <div class="clear">
            <div class="h5 m-t-xs m-b-xs">Modifier un utilisateur</div> 
            <form class="form-group m-t" id="user-editor">
              <label for="lastname">Nom : </label><input type="text" name="lastname" class="form-control input-sm" value="<%= lastname %>" />
              <label for="firstname">Prénom : </label><input type="text" name="firstname" class="form-control input-sm" value="<%= firstname %>" />
              <label for="username">Identifiant : </label><input type="text" name="username" class="form-control input-sm" value="<%= username %>" />
              <label for="email">Adresse mail : </label><input type="text" name="email" class="form-control input-sm" value="<%= email %>" />
              <label for="phone">Téléphone : </label><input type="text" name="phone" class="form-control input-sm" value="<%= phone %>" />
              <label for="post">Poste : </label><input type="text" name="post" class="form-control input-sm" value="<%= post %>" />
              <label for="country">Pays : </label><input type="text" name="country" class="form-control input-sm" value="<%= country %>" />
              <label for="avatar">Avatar : </label><input type="text" name="avatar" class="form-control input-sm" value="<%= avatar %>" />
              <label for="roles">Droits : </label>
              <label for="password">Mot de passe : </label>
            </form>
          </div>
        </div>
      </div>
    </section>
    <footer class="dk footer text-center">
      <button class="btn btn-sm btn-success button-update">Sauvegarder</button>
      <button class="btn btn-sm btn-danger button-cancel m-l">Annuler</button>
    </footer> 
  </div>