{% extends "LilyBackOfficeBundle::layout.html.twig" %}

{% block stylesheets %}      
{{ parent() }}     

{% stylesheets 'js/wysiwyg/wysihtml5.css' '@LilyUserBundle/Resources/public/css/userManager.css' filter='cssrewrite' %}      
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}   
{% endblock %}


{% block body %}

<section class="hbox stretch">

  {% include "LilyBackOfficeBundle::menu.html.twig" with {'user': 'user'}  %}

	{% block content %}
    <!-- .vbox -->
          <section id="users" class="vbox scrollable padder-b">
          </section>
	{% endblock %}


  {% block templates %}
    <!-- L'appel des diffÃ©rents scripts de vue -->
      <script type="text/template" id="user">
          {% include 'LilyUserBundle:Manage:user.html.twig' %}
      </script>
      <script type="text/template" id="userEdit">
          {{ render(controller('LilyUserBundle:Manage:getUserForm')) }}
      </script>
      <script type="text/template" id="userManagementAppViewTpl">
          {% include 'LilyUserBundle:Manage:userManagementAppViewTpl.html.twig' %}
      </script>
      <script type="text/template" id="userStatsAppViewTpl">
          {% include 'LilyUserBundle:Manage:userStatsAppViewTpl.html.twig' %}
      </script>
  {% endblock %}

  {% block bootstrap %}
    {% autoescape false %}
    <script type="text/javascript">
        var root = "{{ path('lily_user') }}";
    </script>
    {% endautoescape %}
  {% endblock %}


</section>

{% endblock %}

{% block javascripts %}

{% javascripts 'js/vendor/jquery.min.js' 'js/vendor/bootstrap.js' 'js/app.js' 'js/vendor/bootstrap.js' 'js/app.plugin.js' 'js/vendor/underscore.min.js' 'js/vendor/backbone.min.js' 'js/charts/flot/jquery.flot.min.js' 'js/charts/flot/jquery.flot.tooltip.min.js' 'js/charts/flot/jquery.flot.resize.js' 'js/charts/flot/jquery.flot.orderBars.js' 'js/charts/flot/jquery.flot.pie.min.js' 'js/charts/flot/jquery.flot.time.min.js''js/sortable/jquery.sortable.js' 'js/wysiwyg/wysihtml5.js' 'js/wysiwyg/bootstrap-wysihtml5.js' 'js/vendor/bootbox.js' 'bundles/fpjsformvalidator/js/fp_js_validator.js' 'js/userManagement.js' '@LilyUserBundle/Resources/public/js/userStats.js' %}

<script type="text/javascript" src="{{ asset_url }}"></script>
  
{% endjavascripts %}

{% endblock %}