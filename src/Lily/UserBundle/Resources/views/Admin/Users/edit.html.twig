	<section class="scrollable">
		<div class="wrapper">
			<div class="clearfix m-b-xlg">
				<div class="clear">
					<div class="h5 m-t-xs m-b-xs">
						<% if(typeof(username) == undefined) { %>
							Ajouter un utilisateur
						<% } else { %>
							Modifier un utilisateur
						<% } %>
					</div> 
					<form class="user-editor m-t">
  					
  				  <div id="avatar-widget" class="col-xs-4 dropzone no-padder-l">
    				  <button class="btn btn-sm btn-white uploader">Modifier</button>
  				  </div>
  				  
            <div class="col-xs-8 no-padder-r">
              <div class="form-group">
                <label>Prénom</label>
                <input type="text" name="firstname" class="form-control input-sm" value="<%= firstname %>">
              </div>
              <div class="form-group">
                <label>Nom</label>
                <input type="text" name="lastname" class="form-control input-sm" value="<%= lastname %>">
  					  </div>
            </div>
            
            <div class="form-group">
              <label>Poste</label>
              <input type="text" name="post" class="form-control input-sm" value="<%= post %>">
  					</div>
  					
  					<div class="form-group">
    					<label>Droits d'accès</label>
    					<div class="btn-group btn-roles">
                <button data-toggle="dropdown" class="btn btn-sm btn-white dropdown-toggle">
                  <span class="dropdown-label text-left" data-placeholder="Droits d'accès"></span> 
                </button>
                <ul class="dropdown-menu dropdown-select">
                  <li><a name="admin" href="#"><input type="checkbox">Administrateur</a></li>
                  <li><a name="chat" href="#"><input type="checkbox">Livechat</a></li>
                  <li><a name="knowledge" href="#"><input type="checkbox">Base de connaissance</a></li>
                </ul>
    					</div>
  					</div>
  					
            <div class="form-group">
              <label>Pays</label>
              <input type="text" name="country" class="form-control input-sm" value="<%= country %>">
  					</div>
  					
            <div class="form-group">
              <label>Téléphone</label>
              <input type="phone" name="lastname" class="form-control input-sm" value="<%= phone %>">
  					</div>
  					
            <div class="form-group">
              <label>Email</label>
              <input type="email" name="email" class="form-control input-sm" value="<%= email %>">
  					</div>
  					
            <div class="form-group">
              <label>Login</label>
              <input type="text" name="username" class="form-control input-sm" value="<%= username %>">
  					</div>
  					
            <div class="form-group col-xs-6 no-padder-l">
              <label>Mot de passe</label>
              <input type="password" name="first" class="form-control input-sm" value="">
  					</div>
  					
            <div class="form-group col-xs-6 no-padder-r">
              <label>Confirmation</label>
              <input type="password" name="second" class="form-control input-sm" value="">
  					</div>
  					
          </form>
				</div>
			</div>
		</div>
	</section>
	
	<footer class="dk footer text-center">
		<button class="btn btn-sm btn-success button-update">Sauvegarder</button>
		<button class="btn btn-sm btn-danger button-cancel m-l">Annuler</button>
	</footer>
	