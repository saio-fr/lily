	<section class="scrollable">
		<div class="wrapper">
			<div class="clearfix m-b-xlg">
				<div class="clear">
					<h5>
						<% if(username) { %>
							Modifier un utilisateur
						<% } else { %>
							Ajouter un utilisateur
						<% } %>
					</h5> 
					<form class="user-editor m-t">
  					
  				  <p class="has-errors upload-errors"></p>
  					
  				  <div class="col-xs-4 no-padder-l avatar-wrapper">
    				  <input type="file" name="avatarFile" accept="image/*">
    				  <img src="<%= converted.avatar %>" class="avatar">
    				  <button class="btn btn-sm btn-white uploader">Modifier</button>
  				  </div>
  				  
            <div class="col-xs-8 no-padder-r">
              <div class="form-group">
                <label>Prénom</label>
                <input type="text" name="firstname" class="form-control input-sm" value="<%= firstname %>">
                <p class="help-block hidden"></p>
              </div>
              <div class="form-group">
                <label>Nom</label>
                <input type="text" name="lastname" class="form-control input-sm" value="<%= lastname %>">
                <p class="help-block hidden"></p>
  					  </div>
            </div>
            
            <div class="form-group">
              <label>Poste</label>
              <input type="text" name="post" class="form-control input-sm" value="<%= post %>">
              <p class="help-block hidden"></p>
  					</div>
  					
  					<div class="form-group form-roles">
    					<label>Droits d'accès</label>
    					<p class="help-block hidden"></p>
    					<div class="checkbox">
                <label>
                  <input type="checkbox" name="roles" id="admin"
                  <% if (roles.indexOf('ROLE_ADMIN') !== -1) { %> checked <% } %> >
                  Administrateur
                </label>
              </div>
              {% if app.user.client.config.chat %}
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="roles" id="chat"
                  <% if (roles.indexOf('ROLE_CHAT_OPERATOR') !== -1) { %> checked <% } %> >
                  Opérateur live chat
                </label>
              </div>
              {% endif %}
              {% if app.user.client.config.avi %}
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="roles" id="knowledge"
                  <% if (roles.indexOf('ROLE_KNOWLEDGE_OPERATOR') !== -1) { %> checked <% } %>>
                  Opérateur base de connaissances
                </label>
              </div>
              {% endif %}
  					</div>
  					
            <div class="form-group">
              <label>Pays</label>
              <input type="text" name="country" class="form-control input-sm" value="<%= country %>">
              <p class="help-block hidden"></p>
  					</div>
  					
            <div class="form-group">
              <label>Téléphone</label>
              <input type="phone" name="phone" class="form-control input-sm" value="<%= phone %>">
              <p class="help-block hidden"></p>
  					</div>
  					
            <div class="form-group">
              <label>Email</label>
              <input type="email" name="email" class="form-control input-sm" value="<%= email %>">
              <p class="help-block hidden"></p>
  					</div>
  					
            <div class="form-group col-xs-6 no-padder-l">
              <label>Mot de passe</label>
              <input type="password" name="plainPassword" class="form-control input-sm" value="">
              <p class="help-block hidden"></p>
  					</div>
  					
            <div class="form-group col-xs-6 no-padder-r">
              <label>Confirmation</label>
              <input type="password" name="plainPasswordRepeat" class="form-control input-sm" value="">
              <p class="help-block hidden"></p>
  					</div>
  					
          </form>
				</div>
			</div>
		</div>
	</section>
	
	<footer class="dk footer text-center">
		<button class="btn btn-sm btn-success button-update">Sauvegarder</button>
		<button class="btn btn-sm btn-danger button-cancel m-l">Annuler</button>
	</footer>
	