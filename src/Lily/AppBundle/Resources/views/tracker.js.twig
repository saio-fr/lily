        title: 'Hello!',
      });
    };

    this.onWidgetClick = function() {
      if (isMobile.phone) {
        this.openMobileWindow();
      } else {
        this.showIframe();
      }
      this.events.send({
        title: "widget:click",
        callback: "onWidgetClick",
        args: ["true"]
      });

    };

    this.onIconReduceClick = function() {
      this.hideIframe();
      this.showWidget();
      this.events.send({
        title: "widget:click",
        callback: "onWidgetClick",
        args: ["false"]
      });
    };

