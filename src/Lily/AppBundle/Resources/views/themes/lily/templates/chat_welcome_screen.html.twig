<div class="page-cont"> <!--wrapper page les différentes pages-->
	<section class="main-content">
	  <div class="contact-form cst-contact-form">
	    <h5 class="contact-form-title">{{ config.chat.contactFormMsg }}</h5>
	    {% if config.chat.contactLastNameField %}
		<p class="contact-form-label">Nom: <label class="lastname" style="display:none">Ce champ ne peut pas être vide.</label></p>
		<input id="lastname" class="cst-form-color" type="text" name="lastname" placeholder="Votre Nom" size="30"/>
		{% endif %}
		{% if config.chat.contactFirstNameField %}
		<p class="contact-form-label">Prénom: <label class="firstname" style="display:none">Ce champ ne peut pas être vide.</label></p>
		<input id="firstname" class="cst-form-color" type="text" name="firstname" placeholder="Votre Prénom" size="30"/>
		{% endif %}
		{% if config.chat.contactEmailField %}
		<p class="contact-form-label">Email: <label class="email" style="display:none">Ce champ ne peut pas être vide.</label></p>
	    <input id="email" class="cst-form-color" type="text" name="email" placeholder="Votre Email" size="30"/>
	    {% endif %}
		<button class="js-submit-welcome-form btn-submit-color" class="button">Commencer la discussion</button>
		{% if config.chat.contactFormAvoidable %}
			<a href="javascript:;" class="skip-link">Aller directement au chat</a>
	  {% endif %}
	  </div>
	</section>
</div>
