{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  <section id="content" class="m-t-lg wrapper-md animated fadeInUp">
    <div class="row m-n">
      <div class="col-md-4 col-md-offset-4 m-t-lg">
        <section class="panel">
          <header class="panel-heading text-center">
            Connexion
          </header>
          <form action="{{ path("fos_user_security_check") }}" method="post" class="panel-body">
	          <div class="form-group">
	            {% if error %}
	            <div class="alert alert-warning alert-block">
	            <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
	            <h4><i class="icon-bell-alt"></i>Erreur!</h4> 
	            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
	            </div>
	          {% endif %}
              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
              <label class="control-label">Email</label>
              <input type="text" placeholder="test@exemple.com" id="username" name="_username" class="form-control">
            </div>
            <div class="form-group">
              <label class="control-label">Mot de passe</label>
              <input type="password" id="password" name="_password" placeholder="Votre mot de passe" class="form-control">
            </div>
            <div class="checkbox">
              <label>
                <input id="remember_me" name="_remember_me" value="on" type="checkbox"> Rester connecté
              </label>
            </div>
            <a href="{{ path("fos_user_resetting_request") }}" class="pull-right m-t-xs"><small>Mot de passe oublié?</small></a>
            <button type="submit" id="_submit" name="_submit"  class="btn btn-info">Connexion</button>
            <div class="line line-dashed"></div>
          </form>
        </section>
      </div>
    </div>
  </section>
  <!-- footer -->
  <footer id="footer">
    <div class="text-center padder clearfix">
      <p>
        <small>Lily, votre agent virtuel en ligne<br>&copy; 2013</small>
      </p>
    </div>
  </footer>
  <!-- / footer -->

{% endblock fos_user_content %}