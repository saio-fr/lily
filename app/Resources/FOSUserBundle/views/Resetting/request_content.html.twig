{% trans_default_domain 'FOSUserBundle' %}


  <section id="content" class="m-t-lg wrapper-md animated fadeInUp">
    <div class="row m-n">
      <div class="col-md-4 col-md-offset-4 m-t-lg">
		<section class="panel">
			<header class="panel-heading font-bold">Nouveau mot de passe</header>
			<div class="panel-body">
			  <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
			    <div class="form-group">
			    {% if invalid_username is defined %}
				    <div class="alert alert-warning alert-block">
		            <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
				    <h4><i class="icon-bell-alt"></i>Erreur!</h4>
				    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
		            </div>
		        {% endif %}
			      <label for="username">{{ 'resetting.request.username'|trans }}</label>
			      <input type="text" class="form-control" id="username" name="username" >
			    </div>
			    <button type="submit" class="btn btn-info">{{ 'resetting.request.submit'|trans }}</button>
			  </form>
			</div>
		</section>
      </div>
    </div>
  </section>