# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# 2 space indentation
[*.js]
indent_style = space
indent_size = 2
charset = utf-8

# 2 space indentation
[*.json]
indent_style = space
indent_size = 2

# 2 space indentation
[*.twig]
indent_style = space
indent_size = 2

# 2 space indentation
[*.css]
indent_style = space
indent_size = 2
